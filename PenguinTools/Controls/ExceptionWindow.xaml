<Window
    x:Class="PenguinTools.Controls.ExceptionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:PenguinTools.Core.Resources;assembly=PenguinTools.Core"
    Title="{x:Static resources:Strings.Title_Error}"
    Width="600"
    Height="400"
    MinWidth="450"
    MinHeight="300"
    MaxWidth="1200"
    MaxHeight="900"
    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    ResizeMode="CanResize"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="Padding" Value="12,4" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="MinHeight" Value="28" />
        </Style>

        <Style x:Key="ErrorHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#D32F2F" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="-32,0,0,12"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Image
                Width="24"
                Height="24"
                Margin="0,0,8,0"
                Source="{StaticResource ErrorIcon}" />
            <TextBlock Style="{StaticResource ErrorHeaderStyle}" Text="{x:Static resources:Strings.Error_Unhandled}" />
        </StackPanel>

        <Border
            Grid.Row="1"
            Margin="0,0,0,12"
            Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
            BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
            BorderThickness="1"
            CornerRadius="2">
            <ScrollViewer
                Padding="4"
                Focusable="False"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <TextBox
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Consolas"
                    FontSize="13"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="True"
                    IsReadOnlyCaretVisible="True"
                    Text="{Binding StackTrace}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </ScrollViewer>
        </Border>

        <DockPanel Grid.Row="2" HorizontalAlignment="Right">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <Button Click="CopyButton_Click" Content="{x:Static resources:Strings.Button_Copy_Exception}" />
            </StackPanel>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button
                    MinWidth="90"
                    Click="CloseButton_Click"
                    Content="{x:Static resources:Strings.Button_Close}"
                    IsCancel="True"
                    IsDefault="True" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>