<UserControl
    x:Class="PenguinTools.Pages.WorkflowTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:PenguinTools.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PenguinTools.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:parser="clr-namespace:PenguinTools.Common.Chart.Parser;assembly=PenguinTools.Core"
    xmlns:res="clr-namespace:PenguinTools.Common.Resources;assembly=PenguinTools.Core"
    xmlns:resources="clr-namespace:PenguinTools.Common.Resources;assembly=PenguinTools.Core"
    xmlns:viewModels="clr-namespace:PenguinTools.ViewModels"
    MinWidth="380"
    MaxWidth="600"
    d:DataContext="{d:DesignInstance Type=viewModels:WorkflowViewModel}"
    mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <local:FileFolderPicker
                Filter="{x:Static resources:Strings.Filefilter_mgxc}"
                Label="{x:Static res:Strings.Label_Chart}"
                Path="{Binding ModelPath}"
                Required="True" />

            <local:Alert Margin="0,8,0,0" Message="{x:Static res:Strings.Alert_mgxc_edit_recommend}" />

            <GroupBox Margin="0,4,0,0" Header="{x:Static res:Strings.Label_Properties}">
                <Grid>
                    <local:MetaPropertyGrid SelectedObject="{Binding Model}" Style="{StaticResource PropertyGridStyle}">
                        <b:Interaction.Behaviors>
                            <behaviors:HideIfNullValueBehavior Value="{Binding Model}" />
                        </b:Interaction.Behaviors>
                    </local:MetaPropertyGrid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontStyle="Italic"
                        Text="{x:Static res:Strings.Label_Not_Available}">
                        <b:Interaction.Behaviors>
                            <behaviors:HideIfNullValueBehavior Invert="True" Value="{Binding Model}" />
                        </b:Interaction.Behaviors>
                    </TextBlock>
                </Grid>
            </GroupBox>

            <local:Alert
                Margin="0,8,0,0"
                Level="Warning"
                Message="{Binding LastModifiedTime, StringFormat={x:Static res:Strings.Alert_file_changed}}">
                <b:Interaction.Behaviors>
                    <behaviors:HideIfNullValueBehavior Value="{Binding LastModifiedTime}" />
                </b:Interaction.Behaviors>
            </local:Alert>
        </StackPanel>

        <StackPanel Grid.Row="1" Style="{StaticResource ActionPanelStyle}">
            <Button
                Margin="0,0,4,0"
                Command="{Binding ReloadCommand}"
                Content="{x:Static res:Strings.Button_Reload}" />
            <Button Command="{Binding ActionCommand}" Content="{x:Static res:Strings.Button_Convert}" />
        </StackPanel>

        <TextBlock
            Grid.Row="0"
            Grid.RowSpan="2"
            Style="{StaticResource FloatText}"
            Text="{Binding Source={x:Static parser:MgxcParser.MargreteVersion}, StringFormat={x:Static res:Strings.Compatible_with_Margrete}}" />
    </Grid>
</UserControl>